<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:collapsedTitleGravity="center_horizontal"
            app:expandedTitleGravity="center_horizontal"
            android:fitsSystemWindows="true"
            android:contentInsetStart="0dp"
            app:contentInsetStart="0dp">

            <app.coguard.health.customview.SquareImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kale"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                android:layout_margin="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:padding="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">
                <ImageView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Alanya Kalesi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"/>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-88dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.dytstudio.traveljournal.Details"
            tools:showIn="@layout/activity_details">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space16"
                    android:background="@mipmap/bg_desc"
                    android:layout_marginLeft="@dimen/space16"
                    android:layout_marginRight="@dimen/space16">
                    <RelativeLayout
                        android:id="@+id/rl_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/user_profile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/profile" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/user_profile"
                            android:layout_marginLeft="@dimen/space16"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Alanya Kalesi"
                                android:textSize="@dimen/h2"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space8"
                                android:drawableLeft="@mipmap/ic_pin_drop"
                                android:drawablePadding="@dimen/space8"
                                android:text="Hisariçi, 07400 Alanya/Antalya"
                                android:textSize="@dimen/h6"
                                android:textColor="@color/grey_80"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_info"
                        android:layout_marginTop="@dimen/space16"
                        android:text="Alanya Kalesi, Antalya'nın ilçesi Alanya'nın simgelerinden biri olan kale. "
                        android:textColor="@color/grey_80"
                        android:textSize="@dimen/h5" />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="@dimen/space16"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space16"
                    android:paddingRight="@dimen/space16">
                    <TextView
                        android:id="@+id/tv_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_love"
                        android:drawablePadding="@dimen/space8"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="25 Likes"
                        android:textColor="@color/grey_80"
                        android:textSize="@dimen/h6"
                        />
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_love"
                        android:layout_alignParentRight="true"
                        app:flexWrap="nowrap"
                        app:flexDirection="row"
                        app:alignContent="flex_end"
                        app:justifyContent="flex_end">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profil1"/>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profil2"
                            android:layout_marginLeft="@dimen/space8"/>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profil3"
                            android:layout_marginLeft="@dimen/space8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="25+"
                            android:textColor="@color/grey_80"
                            android:textSize="@dimen/h6"

                            android:layout_marginLeft="@dimen/space8"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space16"
                    android:paddingLeft="@dimen/space16"
                    android:paddingRight="@dimen/space16">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Comments"
                        android:textSize="@dimen/h3"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="+ comment"
                        android:textSize="@dimen/h5"
                        android:textColor="@color/grey_80"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space16"
                    android:layout_marginLeft="@dimen/space16"
                    android:layout_marginRight="@dimen/space16"
                    android:background="#e5e5e5"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space16"
                    android:paddingRight="@dimen/space16"
                    android:paddingLeft="@dimen/space16">
                    <ImageView
                        android:id="@+id/img_comment"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/profil2"/>
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_comment"
                        android:layout_marginLeft="@dimen/space16"
                        android:layout_alignTop="@id/img_comment"
                        android:text="mariam"
                        android:textSize="@dimen/h5"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_username"
                        android:layout_alignBottom="@id/tv_username"
                        android:layout_alignBaseline="@id/tv_username"
                        android:layout_marginLeft="@dimen/space8"
                        android:text="2 hours ago"
                        android:textColor="@color/grey_80"
                        android:textSize="@dimen/h7"
                        />
                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img_comment"
                        android:layout_marginLeft="@dimen/space16"
                        android:layout_below="@id/tv_username"
                        android:text="Nice share @hty. Very nice place to go."
                        android:textSize="@dimen/h5"
                        android:textColor="@color/grey_80"
                        />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
